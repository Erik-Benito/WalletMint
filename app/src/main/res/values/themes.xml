<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MintWallet" parent="Theme.Material3.DayNight.NoActionBar" />
    <style name="Theme.MintWallet" parent="Base.Theme.MintWallet" >
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/jakarta_regular</item>
    </style>

    <style name="button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/jakarta_semi_bold</item>
    </style>

</resources>